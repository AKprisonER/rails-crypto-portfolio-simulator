<script>
  // Scroll smoothly 
  var delay = 1000

  $(".wrimagecard").click(function() {
    $('html, body').animate({
        scrollTop: $("#section-tabs").offset().top -55},
        delay);
  });

  //smoothscroll
  $(document).on("scroll", onScroll);
  $('.sections').on('click', function (e) {
      e.preventDefault();
      $('.sections a').each(function () {
          $(this).removeClass('active');
      })
      $(this).addClass('active');
      var target = this.hash,
          menu = target;
      $target = $(target);
      $('html, body').stop().animate({
          'scrollTop': $target.offset().top-55},delay);
  });

  function onScroll(event){
      var scrollPos = $(document).scrollTop();
      $('.sections').each(function () {
        var currLink = $(this);
        var refElement = $(currLink.attr("href"));
        if (refElement.position().top-56 <= scrollPos && refElement.position().top-56 + refElement.height() > scrollPos) {
            $('.sections').removeClass("active");
            currLink.addClass("active");
        }
        else{
            currLink.removeClass("active");
        }
      });
  }

  // When the user scrolls down 50px from the top of the document, show the button
  $(window).scroll(function() {
      if ($(this).scrollTop() >= 50) {        // If page is scrolled more than 50px
          $('#return-to-top').fadeIn(200);    // Fade in the arrow
      } else {
          $('#return-to-top').fadeOut(200);   // Else fade out the arrow
      }
  });
  $('#return-to-top').click(function() {      // When arrow is clicked
      $('body,html').animate({
          scrollTop : 0                       // Scroll to top of body
      }, 1000);
  });

</script>