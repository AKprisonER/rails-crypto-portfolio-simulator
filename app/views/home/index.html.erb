<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>
<strong id="last-updated"><p class="pull-right">Last Updated: <%= Time.now.strftime('%H:%M:%S') %></p></strong>


<h3 class="text-muted"> <strong> Top 50 Crypto Currencies of the day</strong> </h3>
<br>
<div class="col-md-8">
  <div class="table-responsive">
    <table class="table datatable" id="table-index">
      <thead class="">
        <th>Rank</th>
        <th>Symbol</th>
        <th>Name</th>
        <th>Price (U$D)</th>
        <th>Variation (1 hs)</th>
        <th>Variation (24 hs)</th>
      </thead>
      <tbody>
        <% @coins.each do |c| %>
          <tr>
            <td><%= c['rank'] %></td>
            <td> <%= link_to c["symbol"], "/lookup?q=#{c['symbol']}" %> </td>
            <td> <%= link_to c["name"], "/lookup?q=#{c['symbol']}" %> </td>
            <td> <%= c["price_usd"] %> </td>
            <td> <%= c["percent_change_1h"] %> </td>
            <td> <%= c["percent_change_24h"] %> </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="col-md-4">
  <% array_date = [] %>
  <% array_price = [] %>

  <% @historical['bpi'].each do |k, v|%>
    <%= k %> | <%= v %> <br>
    <% array_date << k %>
    <% array_price << v %>
  <% end %>

  <%= array_date%>
  <%= array_price%>
</div>


