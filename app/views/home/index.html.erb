<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>

<h2> Top 50 Crypto Currencies of the day </h2>
<br>
<table class="table table-responsive">
  <thead class="">
  	<th>Symbol</th>
  	<th>Name</th>
  	<th>Price (U$D)</th>
  	<th>Variation (24hs)</th>
  </thead>
  <tbody>
    <% @coins.each do |c| %>
      <tr>
        <td> <%= link_to c["symbol"], "/search?q=#{c['symbol']}" %> </td>
        <td> <%= link_to c["name"], "/search?q=#{c['symbol']}" %> </td>
        <td> <%= c["price_usd"] %> </td>
        <td> <%= c["percent_change_24h"] %> </td>
      </tr>
    <% end %>
  </tbody>
</table>