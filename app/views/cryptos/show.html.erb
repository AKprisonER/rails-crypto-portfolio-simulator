<p id="notice"><%= notice %></p>

<div class="panel panel-default">
	<div class="panel-heading">
		<h3 class="panel-title"><strong><%= @current_user.name %></strong></h3>
	</div>
	<div class="panel-body">
		<h2>
		  <strong><%= @crypto.symbol.upcase %></strong>
		</h2>
		<p>
		  <strong>Cost per:</strong>
		  <%= @crypto.cost_per %>
		</p>
		<p>
		  <strong>Quantity owned:</strong>
		  <%= @crypto.amount_owned %>
		</p>
	</div>
	<div>
		<div class="panel-footer">
			<%= link_to 'Edit', edit_crypto_path(@crypto) %> |
			<%= link_to 'Delete', cryptos_path(@crypto), method: :delete, data: { confirm: 'Are you sure?' } %> |
			<%= link_to 'Back', cryptos_path %> 
		</div>
	</div>
</div>


