<p>
  <div class="col-md-2">
  	<b>Name:</b>
  </div>
  <div class="col-md-4">
  	<%= current_user.name %>
  </div>
</p>
<br>
<p>
  <div class="col-md-2">
  	<b>Username:</b>
  </div>
  <div class="col-md-4">
  	<%= current_user.username %>
  </div>
</p>
<br>
<p>
  <div class="col-md-2">
  	<b>Birthdate:</b>
  </div>
  <div class="col-md-4">
    <% if current_user.birthdate? %>
     <%= current_user.birthdate.strftime('%d/%m/%Y') %>
    <% else %>
      --/--/--  <span class="" style="color:red"> Please complete this field </span>
    <% end %>
  </div>
</p>
<br>
<p>
  <div class="col-md-2">
    <b>Location:</b>
  </div>
  <div class="col-md-9">
    <% if current_user.country? %>
     <%= current_user.country %>
    <% else %>
      -------- <span class="" style="color:red"> Please complete this field </span>
    <% end %>
  </div>
</p>
<div class="clearfix"></div>
<p>
  <div class="col-md-2">
  	<b>Email:</b>
  </div>
  <div class="col-md-4">
  	<%= current_user.email %>
  </div>
</p>

