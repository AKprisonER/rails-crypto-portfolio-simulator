<%= render 'layouts/flash' %>
<%= render 'home/breadcrumbs' %>

<div class="content">
  <!-- Animated -->
  <div class="animated fadeIn">
    <div class="row">

      <div class="col-lg-2"></div>
      <div class="col-lg-8">
        <div class="profile">
          <div class="profile__header">
            <div class="">
                <h5 class="profile__username text-center"><i class="fa fa-info"></i>  NOTE! <br><br>
                  This feature is still in development stage! The changes made will not be saved unfortunately.
                </h5> 
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-2"></div>

      <div class="col-lg-4"></div>
      <div class="col-lg-10" id="layout-profile">
        <div class="profile">
          <div class="profile__header">
            <div class="">
                <h5 class="profile__username text-center">Background Color |</h5><br>
                <div>
                  <input class="colorPicker" id= "main-panel-color" placeholder="Select">
                </div>
            </div>
            <div class="">
                <h5 class="profile__username text-center">Upper Bar Color |</h5><br>
                <input class="colorPicker" id= "navbar-color" placeholder="Select">
            </div>
            <div class="">
                <h5 class="profile__username text-center">Left Bar Color</h5><br>
                <input class="colorPicker" id= "left-panel-color" placeholder="Select">
            </div>
            <div class="">
                <h5 class="profile__username text-center"></h5><br>
            </div>
          </div>
        </div>
      </div>  

    </div>
  </div>
</div>

<script>
//  Color Picker
  $(document).ready(function(){
      $('.colorPicker').minicolors({theme: 'bootstrap'});
      $("#main-panel-color").change(function(){
          $('.right-panel').css('background-color', document.querySelector("#main-panel-color").value);
      });
      $("#navbar-color").change(function(){
          $('.header').css('background-color', document.querySelector("#navbar-color").value);
          $('#header').css('background-color', document.querySelector("#navbar-color").value);
          $('.navbar').css('background-color', document.querySelector("#navbar-color").value);
          $('.navbar-header').css('background-color', document.querySelector("#navbar-color").value);
      });
      $("#left-panel-color").change(function(){
          $('#main-menu').css('background-color', document.querySelector("#left-panel-color").value);
          $('.left-panel').css('background-color', document.querySelector("#left-panel-color").value);
          $('.left-panel .active').css('background-color', document.querySelector("#left-panel-color").value);
      });
  });
</script>